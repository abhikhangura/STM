<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/stm_logo"
        android:layout_width="160dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-50dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/stm_logo" />

    <ImageView
        android:id="@+id/stm_name_logo"
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/stm_name_logo"
        app:layout_constraintTop_toBottomOf="@+id/stm_logo"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="-15dp"
        android:transitionName="logo_name"
        android:elevation="10dp"
        app:layout_constraintLeft_toRightOf="@+id/stm_logo"
        />
</androidx.constraintlayout.widget.ConstraintLayout>